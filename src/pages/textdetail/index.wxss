@import "../../wxParse/wxParse.wxss";

canvas{
  position: fixed;
  top: 0;
  left: 500px;
}
.preview {
  width: 100%;
  height: 100%;
  background: rgba(0,0,0,.5);
  position: fixed;
  top: 0;
  left: 0;
  z-index: 2;
}
.previewImg{
  width: 70%;
  position: absolute;
  top: 10%;
  left: 15%;
  z-index: 3;
  border: 1px dashed #fff;
}
.preview button{
  width: 40%;
  position: absolute;
  bottom: 100rpx;
  left: 30%;
}
/*
初始化wxParse
*/
.wxParse-img{
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  position: relative;
  top: 0;
  left: 50%;
  transform: translateX(-50%);
}
.wxParse-p{
  text-align: justify;
}

.container{
  padding-bottom: 120rpx;
}
.titlestyle{
  font-weight: 900;
  padding: 20rpx 20rpx;
  letter-spacing: 5rpx;
}
/*
*头部设置
*/
.head{
  padding: 20rpx;
  display: flex;
  flex-direction: row;
  height: 40px;
}
.headphoto{
  height: 100%;
  width: 50%;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.headphoto image{
  height: 1.2rem;
  width: 1.2rem;
  border-radius: 50%;
}
.headphoto>view{
  flex-direction: column;
}
.headphoto .headname{
  font-size: 35rpx;
  padding-left: 10rpx
}
.headphoto .headtime{
  font-size: 20rpx;
  padding-left: 10rpx
}
.fontsizebtn{
  width:50%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.fontsizebtn button{
  height: 25px;
  line-height: 25px;
  font-size: 20rpx;
}
.fontsizebtn button:first-child{
  margin-right: 1rem;
}
.fontsizebtn button:last-child{
  margin-left: 0rem;
}

/*
*文本
*/
 .wordtext{
  padding: 20rpx;
  font-family: Arial, Helvetica, sans-serif;
}
/*.wxParse-img{
  width: 100% !important;
} */

/*
*广告栏*
*/
.adcard{
  height: 90px;
  width: 100%;
  padding: 10rpx 20rpx;
  display: flex;
  flex-direction: row;
  box-sizing: border-box;
  border-top: 5px solid #eee;
  border-bottom: 5px solid #eee;
}
.adcard .adphoto{
  width: 30%;
}
.adcard .adphoto image{
  height:100%;
  width: 100%;
}
.adcard .adtext{
  width:70%;
  padding-left: 20rpx;
  overflow: hidden;
}
.adcard .adtext .titlestyle{
  padding: 0;
  letter-spacing: 0;
  font-size: 14px;
}
.adcard .adtext .tipstyle{
  font-size: 11px;
  line-height: 18px;
}

/*
*评论
*/
.commentcard{
  padding: 20rpx;
}
.commentcard .commenttitle{
  line-height: 20px;
  border-left: 2px solid red;
  padding-left: 10rpx;
}
.commentcard .commentitem{
  padding:30rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: center;
}
.commentcard .firstchild{
  /* padding-left:20rpx; */
  /* background-color: #eee; */
  border-bottom:1px solid #ddd;
}
.commentcard .firstchild:last-child{
  border-bottom: none;
}
.commentcard .commentitem .commentphoto image{
  height: 2rem;
  width: 2rem;
  border-radius: 50%;
  margin-top: 10rpx;
}
.commentcard .commentitem .commentinfo{
  padding: 0 10rpx;
  width: 90%;
  box-sizing: border-box;
}
.commentcard .commentitem .commentinfo .headname{
  font-size: 14px;
  color: rgb(12,107,206);
  height: 20px;
  line-height: 20px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.commentcard .commentitem .commentinfo .headname>view:last-child{
  margin-top: -10rpx;
  color: #bbb;
  font-size: 10px;
  cursor: pointer;
}
.icon-praise{
  display: inline;
  font-size: 12px;
}
.commentcard .commentitem .commentinfo .commentcont{
  font-size: 12px;
  color: #000;
  padding-top: 10rpx;
}
.commentcard .commentitem .commentinfo .time{
  font-size: 10px;
  color: #bbb;
  padding-top: 10rpx;
}
/*
*底部评论栏
*/
.menubar{
  height: 120rpx;
  border-top: 1px solid #ddd;
  position: fixed;
  bottom:0;
  background-color: #fff;
  width: 100%;
  padding: 20rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.menubar input{
  border: 1px solid #ccc;
  border-radius: 5px;
  font-size:10px;
  padding-left: 10rpx;
  width: 80%;
  height: 80%;
  min-height: 80%;
}
.menubar button[type="primary"]{
  font-size:10px;
  margin:0 20rpx;
  width: 180rpx;
}
.menubar .iconfont{
  font-size: 24px;
  /* margin-left: 30rpx; */
}
.collect{
  color:red;
}
/*分享*/
.quickPublishBtn {
  background: none;
  border: none; 
  z-index: 2;
  padding:0;
}
.quickPublishBtn:after{
  border: none;
}
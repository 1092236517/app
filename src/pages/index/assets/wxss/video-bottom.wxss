.view-item .view-item-video-bottom {
  display: flex;
  flex-direction: column;
  height: 420rpx;
  width: 95%;
  padding: 20rpx 20rpx;
}

.view-item .view-item-video-bottom .item-top {
  display: block;
  overflow: hidden;
  width: 100%;
  height: 12%;
}

.view-item .view-item-video-bottom .item-middle {
  display: flex;
  flex-direction: row;
  width: 100%;
  margin-top: 4rpx;
  height: 76%
}

.view-item .view-item-video-bottom .item-middle .item-middle-video{
  width:100%;
  margin-right: 2%;
  height: 100%;
}

.view-item .view-item-video-bottom .item-middle .item-middle-video image{
  display: block;
  height: 100%;
  width: 100%;
}

.view-item .view-item-video-bottom .item-bottom {
  display: flex;
  flex-direction: row;
  margin-top: 14rpx;
  height: 9%;
  width: 100%;
  font-size: 24rpx;
}

.view-item .view-item-video-bottom .item-bottom .item-bottom-tag{
  height: 34rpx;
  line-height: 34rpx;
  width: 75rpx;
  border: 2rpx #f84709 solid;
  border-radius: 10rpx;
  text-align: center;
  color: #f84709;
  margin-right: 20rpx;
}

.view-item .view-item-video-bottom .item-bottom .item-bottom-comment{
  color: #999999;
  padding-top: 2rpx;
}